root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,pyi,pyx}]
indent_size = 4

[*.{yml,yaml,json,toml,md}]
indent_size = 2

[*.{sh,env}]
indent_size = 2

[*.{ts,tsx,js,jsx}]
indent_size = 2

[Makefile]
indent_style = tab
